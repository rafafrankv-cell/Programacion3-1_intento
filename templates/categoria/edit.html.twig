{% extends 'base.html.twig' %}

{% block title %}Edit Categoria{% endblock %}

{% block body %}
    <div class="card shadow p-4 mx-auto" style="max-width: 600px; border-radius: 12px;">

        <h2 class="mb-4 text-center fw-semibold" style="letter-spacing: 0.5px;">
            Editar Categoría
        </h2>

        <div class="p-3 border rounded" style="background:#fafafa;">
            {{ include('categoria/_form.html.twig', {'button_label': 'Actualizar'}) }}
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <a class="btn btn-outline-secondary px-4" href="{{ path('app_categoria_index') }}">
                Volver al listado
            </a>

            <div class="delete-container">
                {{ include('categoria/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

<style>
    /* Separación entre campos */
    form div.form-group,
    form div.mb-3 {
        margin-bottom: 22px !important;
    }

    /* Labels en negrita */
    form label {
        font-weight: 600 !important;
        margin-bottom: 6px !important;
        display: block;
    }

    /* Inputs limpios */
    form input,
    form select {
        padding: 8px 10px !important;
        border-radius: 6px !important;
    }

   
    form button.btn,
    form input[type="submit"],
    form button[type="submit"] {
        margin-top: 16px !important;
        padding: 8px 18px !important;
        border-radius: 6px !important;
        border: 1px solid #0d6efd !important;
        background-color: #0d6efd !important;
        color: #ffffff !important;
        font-weight: 500 !important;
        cursor: pointer;
        transition: 0.2s ease-in-out;
    }

    /* Hover real */
    form button.btn:hover,
    form input[type="submit"]:hover,
    form button[type="submit"]:hover {
        background-color: #0b5ed7 !important;
        border-color: #0a58ca !important;
    }

    /* Botón Eliminar (igual que los otros) */
    .delete-container form button {
        border: 1px solid #dc3545 !important;
        color: #dc3545 !important;
        background: white !important;
        padding: 6px 14px !important;
        border-radius: 6px !important;
        transition: 0.2s;
    }

    .delete-container form button:hover {
        background: #dc3545 !important;
        color: #fff !important;
    }
</style>

{% endblock %}
