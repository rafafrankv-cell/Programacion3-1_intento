{% extends 'base.html.twig' %}

{% block title %}Edit Autor{% endblock %}

{% block body %}
    <div class="card shadow p-4 mx-auto" style="max-width: 600px; border-radius: 12px;">

        <h2 class="mb-4 text-center fw-semibold" style="letter-spacing: 0.5px;">
            Editar Autor
        </h2>

        <div class="p-3 border rounded" style="background:#fafafa;">
            {{ include('autor/_form.html.twig', {'button_label': 'Actualizar'}) }}
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <a class="btn btn-outline-secondary px-4" href="{{ path('app_autor_index') }}">
                Volver al listado
            </a>

            <div class="delete-container">
                {{ include('autor/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

<style>

    /* Separación entre campos */
    form div.form-group,
    form div.mb-3 {
        margin-bottom: 22px !important;
    }

    /* Labels */
    form label {
        font-weight: 600 !important;
        margin-bottom: 6px !important;
        display: block;
    }

    /* Inputs */
    form input,
    form select {
        padding: 8px 10px !important;
        border-radius: 6px !important;
    }

 
    form .btn-primary {
        margin-top: 16px !important;
    }


    /* Botón Eliminar */
    .delete-container form button {
        border: 1px solid #dc3545 !important;
        color: #dc3545 !important;
        background: white !important;
        padding: 6px 14px !important;
        border-radius: 6px !important;
        transition: 0.2s;
    }

    .delete-container form button:hover {
        background: #dc3545 !important;
        color: #fff !important;
    }
</style>

{% endblock %}
