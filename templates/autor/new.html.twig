{% extends 'base.html.twig' %}

{% block title %}Crear nuevo Autor{% endblock %}

{% block body %}
    <div class="card shadow p-4 mx-auto" style="max-width: 600px; border-radius: 12px;">

        <h2 class="mb-4 text-center fw-semibold" style="letter-spacing: 0.5px;">
            Crear nuevo Autor
        </h2>

        <div class="p-3 border rounded" style="background:#fafafa;">
            {{ include('autor/_form.html.twig') }}
        </div>

        <div class="d-flex justify-content-start gap-3 mt-4">
            <a class="btn btn-secondary px-4" href="{{ path('app_autor_index') }}">
                Volver al listado
            </a>
        </div>

    </div>

<style>
    /* Separación entre campos */
    form div.form-group,
    form div.mb-3 {
        margin-bottom: 22px !important;
    }

    /* Labels en negrita */
    form label {
        font-weight: 600 !important;
        margin-bottom: 6px !important;
        display: block;
    }

    /* Inputs con estilo */
    form input,
    form select {
        padding: 8px 10px !important;
        border-radius: 6px !important;
        border: 1px solid #ced4da !important;
    }

    /* Botón azul Save */
    form .btn,
    form button,
    form input[type="submit"] {
        margin-top: 16px !important;
        padding: 8px 18px !important;
        border-radius: 6px !important;
        border: 1px solid #0d6efd !important;
        background-color: #0d6efd !important;
        color: #fff !important;
        font-weight: 500 !important;
        cursor: pointer;
        transition: 0.2s ease-in-out;
    }

    form .btn:hover,
    form button:hover,
    form input[type="submit"]:hover {
        background-color: #0b5ed7 !important;
        border-color: #0a58ca !important;
    }

    /* Botón gris Volver */
    a.btn.btn-secondary {
        background-color: #e2e6ea !important;
        border: 1px solid #cbd3da !important;
        color: #333 !important;
        padding: 8px 18px !important;
        border-radius: 6px !important;
    }

    a.btn.btn-secondary:hover {
        background-color: #d6d8db !important;
    }
</style>

{% endblock %}
